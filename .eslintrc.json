{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "error", 
            {
              "singleQuote": true,
               "parser": "typescript",
               "endOfLine": "crlf"
            }
          ],
          "no-shadow": "off",
          "import/extensions": "off",
          "import/no-extraneous-dependencies": "off",
          "import/prefer-default-export": "off",
          "import/no-unresolved": "off"
    }
}
