generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Volunteer {
  id String @id

  email                  String
  fullName               String
  birthdate              String
  cellphoneNumberWithDDD String
  occupation             String
  semester               String? // enum
  listFreeDaysOfWeek     String[] // enum
  numberOfFreeDaysOfWeek Int
  howMuchParticipate     String // enum
  howDidKnowOfSDR        String //enum
  verifiedEmail          Boolean
  timeOfExperience       String
  speciality             String?

  university String?
  createdAt  Int
  updatedAt  Int?

  @@map("volunteers")
}
