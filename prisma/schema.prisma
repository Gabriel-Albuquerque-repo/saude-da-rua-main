// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Occupation {
  MEDICO
  ENFERMEIRO
  FARMACEUTICO
  ESTUDANTE
}

enum Semester {
  FIRST
  SECOND
  THIRD
  FOURTH
  FIFTH
  SIXTH
  SEVENTH
  EIGHTH
  NINTH
  TENTH
  MORE
}

enum FreeDaysOfWeek {
  DOMINGO
  SEGUNDA
  TERCA
  QUARTA
  QUINTA
  SEXTA
  SABADO
}

enum Participation {
  PARTICIPATED
  NOT_PARTICIPATED
}

model Volunteer {
  id String @id

  email                  String
  fullName               String
  birthdate              String
  cellphoneNumberWithDDD String
  occupation             Occupation
  semester               Semester? // enum
  listFreeDaysOfWeek     FreeDaysOfWeek[] // enum
  numberOfFreeDaysOfWeek Int
  hasParticipated        Participation // enum
  howDidKnowOfSDR        String
  verifiedEmail          Boolean
  timeOfExperience       String?
  speciality             String?

  university String?
  createdAt  Int
  updatedAt  Int?

  @@map("volunteers")
}

model Admin {
  id String @id

  email           String
  name            String
  permissionLevel String
  passwordHash    String

  createdAt Int
  updatedAt Int

  @@map("admins")
}

enum FileType {
  IMAGE
  PDF
}

model File {
  id String @id

  fileType FileType
  url      String

  createdAt Int

  @@map("files")
}

model InstagramToken {
  id String @id

  longLivedToken String

  @@map("instagram_tokens")
}

model Pix {
  id String @id

  key String

  @@map("pix")
}
